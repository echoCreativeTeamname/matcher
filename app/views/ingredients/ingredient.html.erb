<form action="/ingredients/<%= @ingredient.id %>/update" accept-charset="UTF-8" method="post" class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label" style="text-align: left;">ID</label>
    <div class="col-sm-10 control-label" style="text-align: left;">
        <%= @ingredient.id %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label" style="text-align: left;">UUID</label>
    <div class="col-sm-10 control-label" style="text-align: left;">
        <%= @ingredient.uuid %>
    </div>
  </div>

  <div class="form-group">
    <label for="ingredient_name" class="col-sm-2 control-label" style="text-align: left;">Naam</label>
    <div class="col-sm-10">
      <input value="<%= @ingredient.name %>" class="form-control" type="text" name="ingredient[name]" id="ingredient_name" />
    </div>
  </div>

  <div class="form-group">
    <label for="ingredient_healthclass" class="col-sm-2 control-label" style="text-align: left;">Gezondheids klasse</label>
    <div class="col-sm-10">
      <select class="form-control" name="ingredient[healthclass]" id="ingredient_healthclass">
        <% 3.times do |i| %>
          <% if(@ingredient.healthclass == i) %>
            <option selected><%= i %></option>
          <% else %>
            <option><%= i %></option>
          <% end %>
        <% end %>
      </select>
    </div>
  </div>

  <div class="form-group">
    <label for="ingredient_imageurl" class="col-sm-2 control-label" style="text-align: left;">Afbeeldings-url</label>
    <div class="col-sm-10">
      <input placeholder="https://uva.yoeori.nl/img/ingredients/apples.jpg" value="<%= @ingredient.imageurl %>" class="form-control" type="text" name="ingredient[imageurl]" id="ingredient_imageurl" />
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" name="commit">Opslaan</button>
      <a class="btn btn-danger" onclick="wanttodelete();" href="#">verwijderen</a>
    </div>
  </div>
</form>
<script type="text/javascript">
function wanttodelete() {
  if(confirm('Weet je zeker dat je dit ingrediÃ«nt wilt verwijderen?')) {
    window.location = "/ingredients/<%= @ingredient.id %>/delete";
  }
}
</script>
